  <% Profile::EQUIP_DONDE.each do |donde| %>
    <tr class="<%= cycle :odd, :even %> ">
      <td class="name"><%= t(donde, :scope => [:encuesta, :equipamiento]) %></td>
      <% Profile::TAN.each do |option| %>
        <td><%= f.radio_button "equip_ac_donde_#{donde}", option  %></td>
      <% end -%>
    </tr>
  <% end %>
</table>

<p class="info">¿es individual o centralizada para todo el bloque?</p>
<% Profile::EQUIP_TIPO_IC.each do |option| %>
  <p><%= f.radio_answer :equip_ac_tipo, option, :equipamiento %></p>
<% end -%>

<p class="info">Edad aproximada de la instalación</p>
<p><label>&nbsp;</label><%= f.text_field :equip_ac_edad %></p>

